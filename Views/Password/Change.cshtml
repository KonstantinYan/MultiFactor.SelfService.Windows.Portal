@model MultiFactor.SelfService.Windows.Portal.Models.ChangePasswordModel

@{
    ViewBag.Title = "Смена пароля";
}
<div action="#" class="login change-pwd">
    <div class="form-column">
        @using (Html.BeginForm("Change", "Password", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
        {
        <fieldset>
            @Html.AntiForgeryToken()
            <p>Пожалуйста, поменяйте пароль для продолжения работы. Обратите внимание, новый пароль:</p>
            <ul class="pwd-policy">
                <li>Не должен совпадать с вашим логином</li>
                <li>Не должен повторять ранее использованные пароли</li>
                <li>Должен содержать не менее 7 символов</li>
                <li>Включать цифры и буквы в разном регистре</li>
            </ul>
            <br />
            <div>
                @Html.ValidationSummary(true)
            </div>
            <div class="form-row">
                <div class="input">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Текущий пароль" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="input">
                    @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Новый пароль" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div class="input">
                    @Html.PasswordFor(m => m.NewPasswordAgain, new { placeholder = "Еще раз новый пароль" })
                    @Html.ValidationMessageFor(m => m.NewPasswordAgain)
                </div>
            </div>
            <div class="form-row">
                <input type="submit" class="btn" value="Сменить" />
            </div>
        </fieldset>
        }
    </div>
</div>